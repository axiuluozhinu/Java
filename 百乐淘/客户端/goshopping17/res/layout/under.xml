<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:orientation="horizontal"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:layout_alignParentBottom="true"
	android:gravity="center">
	<LinearLayout 
	    android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:background="#dd9222" 
		android:paddingTop="3dip">
		
		<LinearLayout 
		    android:orientation="vertical" 
		    android:id="@+id/menu1"
			android:layout_width="0dip" 
			android:layout_weight="0.20"
			android:layout_height="wrap_content" 
			android:clickable="true"
			android:background="@drawable/menu">
			
			<ImageView 
			    android:layout_width="wrap_content" 
				android:layout_gravity="center_horizontal" 
				android:layout_height="27dip"
				android:layout_centerVertical="true" 
				android:src="@drawable/menu_home_released" />				
			<TextView 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textSize="12sp" 
				android:gravity="center_horizontal"
				android:textColor="@color/white" 
				android:text="首页" />				
		</LinearLayout>		
		<LinearLayout 
		    android:orientation="vertical" 
		    android:id="@+id/menu2"
			android:background="@drawable/menu" 
			android:layout_width="0dip"
			android:layout_weight="0.20" 
			android:layout_height="wrap_content"
			android:clickable="true">			
			<ImageView 
			    android:layout_width="wrap_content" 			
				android:layout_gravity="center_horizontal" 
				android:layout_height="27dip"
				android:layout_centerVertical="true" 
				android:src="@drawable/menu_brand_released" />				
			<TextView 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textSize="12sp" 
				android:gravity="center_horizontal"
				android:textColor="@color/white" 
				android:text="分类" />				
		</LinearLayout>		
		<LinearLayout 
		    android:orientation="vertical"
			android:id="@+id/menu3" 
			android:background="@drawable/menu"
			android:layout_width="0dip" 
			android:layout_weight="0.20"
			android:layout_height="wrap_content" 
			android:clickable="true">
			
			<ImageView 
			    android:layout_width="wrap_content"
			    android:layout_gravity="center_horizontal"
				android:layout_height="27dip" 
				android:layout_centerVertical="true"
				android:src="@drawable/menu_shopping_cart_released" />				
			<TextView 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textSize="12sp" 
				android:gravity="center_horizontal"
				android:textColor="@color/white" 
				android:text="商家" />				
		</LinearLayout>		
		<LinearLayout 
		    android:orientation="vertical" 
		    android:id="@+id/menu4"
			android:background="@drawable/menu" 
			android:layout_width="0dip"
			android:layout_weight="0.20" 
			android:layout_height="wrap_content"
			android:clickable="true">			
			<ImageView 
			    android:layout_width="wrap_content" 
				android:layout_gravity="center_horizontal" 
				android:layout_height="27dip"
				android:layout_centerVertical="true" 
				android:src="@drawable/menu_my_letao_released" />				
			<TextView 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textSize="12sp" 
				android:gravity="center_horizontal"
				android:textColor="@color/white" 
				android:text="地图" />				
		</LinearLayout>
		<LinearLayout 
		    android:orientation="vertical" 
		    android:id="@+id/menu5"
			android:background="@drawable/menu" 
			android:layout_width="0dip"
			android:layout_weight="0.20" 
			android:layout_height="wrap_content"
			android:clickable="true">		
			<ImageView 
			    android:layout_width="wrap_content" 
				android:layout_gravity="center_horizontal" 
				android:layout_height="27dip"
				android:layout_centerVertical="true" 
				android:src="@drawable/menu_more_released" />				
			<TextView 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textSize="12sp" 
				android:gravity="center_horizontal"
				android:textColor="@color/white" 
				android:text="更多" />				
		</LinearLayout>		
	</LinearLayout>	
	
		
</RelativeLayout>
