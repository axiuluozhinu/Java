<?xml version="1.0" encoding="utf-8"?>
<!-- 留言-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
     android:background="#FFB90F" >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.07" >
         <include android:id="@+id/title" layout="@layout/title" />      
    </LinearLayout>
  <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.55" >           <EditText  
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_marginTop="5dp"
                  android:gravity="top" 
                  android:id="@+id/Write_leaveword"/>    
 </LinearLayout>
 <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_weight="0.85" >
          <Button
                 android:id="@+id/button1"
                 android:layout_width="80dp"
                 android:layout_height="27dp"
                 android:text="确   认" 
                 android:textSize="14sp"
                 android:layout_marginLeft="10dp"
                  android:textColor="#FFFFFF"
                  android:background="@drawable/bt_red"
                 /> 
         <Button
                android:id="@+id/button2"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:text="取   消" 
                android:textSize="14sp"
                 android:textColor="#FFFFFF"
                 android:layout_marginLeft="140dp"
                  android:background="@drawable/bt_red"
                />
   </LinearLayout>
   <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:layout_weight="1.05" >
         <include android:id="@+id/under" layout="@layout/under" />       
</LinearLayout>

</LinearLayout>