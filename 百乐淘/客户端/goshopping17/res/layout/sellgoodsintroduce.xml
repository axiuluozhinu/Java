<?xml version="1.0" encoding="utf-8"?>
<!-- 商品详细信息 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFB90F" >
<!--标题 -->   
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="4" >
       <include android:id="@+id/title"  layout="@layout/title" />
  </LinearLayout> 
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="0.65" >
<!-- 图片 -->       
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical"
          android:layout_weight="1.2" 
          android:gravity="center_horizontal">
            <LinearLayout 
                   android:background="@drawable/detail_pic_bg" 
                   android:gravity="center" 
                   android:layout_height="150dp" 
                   android:layout_width="170dp">
		       <ImageView
                      android:id="@+id/imageView1"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginBottom="10dp"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"  />			
			</LinearLayout>     
     </LinearLayout>  
 <!-- 商品信息 -->   
     <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical"
          android:layout_weight="1" >  
              
                  <ScrollView
                       android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
  <!-- 商品信息 -->    
              <LinearLayout 
                android:orientation="vertical"
				android:id="@+id/shoe_definite_info" 
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" 
				android:layout_margin="5dip">
				<TextView android:layout_width="fill_parent"
					android:layout_marginLeft="10dip" 
					android:layout_marginTop="2dip"
					android:layout_height="wrap_content" 
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_marginBottom="5dip" 
					android:textSize="14sp"
					android:gravity="center_horizontal"					
					android:text="商品信息" 
					android:textColor="#090909"></TextView>
				<ImageView android:id="@+id/gallery_line"
					android:background="@color/note_gray" 
					android:layout_height="1dip"
					android:layout_width="fill_parent"
					 /> 
		    </LinearLayout>
<!-- 商品名称 -->		    
			<LinearLayout 
			        android:orientation="horizontal"
					android:paddingLeft="10dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_marginBottom="5dip">
					<TextView android:layout_width="65dip"
						android:layout_height="wrap_content"
					    android:textSize="12sp"
                       	android:gravity="right"
                        android:text="商品名称："
                       	android:textColor="#090909" />
					<TextView 
					    android:id="@+id/value_goodsname"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						android:gravity="left" 
						android:textColor="#090909"/>
		    </LinearLayout>
<!-- 品牌 -->		    
			<LinearLayout 
			        android:orientation="horizontal"
					android:paddingLeft="10dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_marginBottom="5dip">
					<TextView 
					    android:layout_width="65dip"
						android:layout_height="wrap_content" 
						android:textSize="12sp"				
						android:gravity="right" 
						android:text="品牌：" 
						android:textColor="#090909"/>
					<TextView 
					    android:id="@+id/value_goodsbrand"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"					
						android:gravity="left"
						android:textColor="#090909" />
			</LinearLayout>
<!-- 型号 -->			
			<LinearLayout 
			        android:orientation="horizontal"
					android:paddingLeft="10dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_marginBottom="5dip">
					<TextView 
					    android:layout_width="65dip"
						android:layout_height="wrap_content" 
						android:textSize="12sp"				
						android:gravity="right" 
						android:text="型号："
						android:textColor="#090909" />
					<TextView 
					    android:id="@+id/value_goodsmodel"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"					
						android:gravity="left"
						android:textColor="#090909" />
			</LinearLayout>
<!-- 热销度 -->			
			<LinearLayout 
			        android:orientation="horizontal"
					android:paddingLeft="10dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_marginBottom="5dip">
					<TextView 
					    android:layout_width="65dip"
						android:layout_height="wrap_content" 
						android:textSize="12sp"
						android:gravity="right" 
						android:text="热销度："
						android:textColor="#090909" />
					<TextView 
					    android:id="@+id/value_goodshot"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						android:gravity="left"
						android:textColor="#090909" />
			</LinearLayout>
<!-- 计量单位 -->				
			<LinearLayout 
			        android:orientation="horizontal"
					android:paddingLeft="10dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_marginBottom="5dip">
				<TextView 
				    android:layout_width="65dip"
					android:layout_height="wrap_content" 
					android:textSize="12sp"
	            	android:gravity="right" 
	            	android:text="单价(元)：" 
					android:textColor="#090909"/>
				<TextView 
				    android:id="@+id/value_goodsunit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
			        android:gravity="left"
			        android:textColor="#090909" />
			</LinearLayout>
<!-- 预定数量 -->			
			<LinearLayout 
			        android:orientation="horizontal"
					android:paddingLeft="10dip" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_marginBottom="5dip">
					<TextView 
					    android:id="@+id/lable_counter_price"
						android:layout_width="65dip" 
						android:layout_height="wrap_content"
						android:textSize="12sp"		
						android:gravity="right" 
						android:text="预定数量："
						android:textColor="#090909" />
					<TextView 
					    android:id="@+id/value_goodsscheduled"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						android:gravity="left" 
						android:textStyle="bold"
						android:textColor="#090909" />
			</LinearLayout>
<!-- 材质 -->			
			<LinearLayout 
			        android:orientation="horizontal"
					android:layout_marginBottom="5dip" 
					android:paddingLeft="10dip"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content">
					<TextView 
					    android:id="@+id/lable_letao_price"
						android:layout_width="65dip" 
						android:layout_height="wrap_content"			
						android:gravity="right" 
						android:text="材质：" 
						android:textColor="#090909"
						android:textSize="12sp"/>
					<TextView 
					    android:id="@+id/value_goodsmaterial"
						android:textStyle="bold" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
					    android:gravity="left" 
					    android:textColor="#090909"/>
			</LinearLayout>
<!-- 颜色 -->
			<LinearLayout 
			        android:orientation="horizontal"
					android:layout_marginBottom="5dip" 
					android:paddingLeft="10dip"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content">
					<TextView 
					    android:id="@+id/lable_letao_price"
						android:layout_width="65dip" 
						android:layout_height="wrap_content"			
						android:gravity="right" 
						android:text="颜色："
						android:textColor="#090909"
						android:textSize="12sp" />
					<TextView 
					    android:id="@+id/value_goodscolor"
						android:textStyle="bold" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
					    android:gravity="left"
					    android:textColor="#090909" />
			</LinearLayout>
	   </LinearLayout> 
	  </ScrollView>
    </LinearLayout>     
 <!-- 三个按钮 -->         
    <LinearLayout 
        
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:padding="5dp" 
        android:gravity="center">
		<LinearLayout 
		    android:id="@+id/lineatlayout1"
			android:background="@drawable/bt_red" 
			android:layout_marginRight="10dp" 
			android:gravity="center" 
			android:layout_height="27dp" 
			android:layout_width="97dp">
			<TextView
			  
			    style="@style/theme_fontcolor_white" 
			    android:layout_height="wrap_content" 
			    android:text="下   架" 
			    android:layout_width="wrap_content"></TextView>
		</LinearLayout>   
    </LinearLayout>                 
</LinearLayout> 
<!-- 菜单 -->
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="3.79" >
              <include android:id="@+id/under" layout="@layout/under" />
</LinearLayout>
</LinearLayout>